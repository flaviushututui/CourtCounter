<?xml version="1.0"?>

    <resources>
    <!-- Base application theme. -->
    <style parent="Theme.AppCompat.Light" name="AppTheme">
    <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
    <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>

        <item name ="android:textColor">#000000</item>

    </style>

    <style name="ButtonAppearance">
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:layout_width">match_parent</item>
        <item name ="android:layout_marginBottom">8dp</item>
        <item name ="android:layout_marginRight">24dp</item>
        <item name ="android:layout_marginLeft">24dp</item>
        <item name ="android:layout_gravity">center</item>
        <item name ="android:textAllCaps">true</item>
    </style>

    <style name="ScoreAppearance">
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:textSize">56sp</item>
        <item name ="android:layout_marginBottom">24dp</item>
        <item name ="android:fontFamily">sans-serif-light</item>
        <item name ="android:layout_gravity">center</item>
    </style>

    <style name="TeamAppearance">
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:textSize">14sp</item>
        <item name ="android:textAllCaps">true</item>
        <item name ="android:layout_marginTop">16dp</item>
        <item name ="android:layout_marginBottom">16dp</item>
        <item name ="android:fontFamily">sans-serif-medium</item>
        <item name ="android:layout_gravity">center</item>
    </style>


</resources>